<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.quote.mosaic.ui.game.lamp.hints.GameHintsModel.Hint" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/hintButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_solid_indigo_rounded_corners"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="@{item.text}"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Some Hint" />

        <TextView
            android:id="@+id/hintEarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_coins"
            android:drawablePadding="8dp"
            android:elevation="8dp"
            android:padding="8dp"
            android:text="@{Integer.toString(item.amount)}"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="-10" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>